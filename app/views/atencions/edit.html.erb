</tr>
<tr>
  <td>
    Alta por:<br />
    <%= f.text_field :altapor, :size=>84 %>
  </td>
</tr>
<tr>
  <td>
    Fecha Egreso:<br />
    <%= f.datetime_select :fechaeg, :include_blank=>true %>
  </td>
</tr>
<tr>
  <td>
    Tipo Atencion:<br />
    <%= f.text_field :tipoat, :size =>97 %>
  </td>
  <td align="center">
    <%= f.submit 'Actualizar' %>
	<%= link_to 'Datos Paciente', paciente_path(@atencion.paciente_id) %></table>
  </td>
</tr>
</table>
