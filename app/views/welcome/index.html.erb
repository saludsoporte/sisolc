<title>Inicio</title> 
<div class="container boder_div texto">
	<div class="row align-items-start"">
		<div class="col"><%= image_tag("LOGO SERVICIOS DE SALUD-1 fondo claro.png",size:"250x80",alt: :"Servicios de Salud de S.L.P." ) %></div>
	</div>
	
		<% if current_user %>
		<div class="row">
			<div class="col">
				<h5>Usuario: <%= current_user.name %></h5>
			</div>
		</div>
		<div class="row">
			<div class="col">A&ntilde;o de creaci&oacute;n:</div>			
			<% @periodos = Solicitud.find_by_sql ["select distinct extract(year from created_at) ANO from solicituds order by ano"] %>
			<% @periodos.each do |periodo| %>
				<div class="col">	
					<%=raw link_to periodo.ano.to_i.to_s , solicituds_path(ano:periodo.ano.to_i), class:"btn"  %> |
				</div>
			<% end %>
			</div>
		</div>		
	<% else %>
		<div class="row">
			<div class="col"><%=raw link_to "Ingresar al sistema", session_path, class:"btn btn-outline-secondary" %></div>		
		</div>
	<% end %>
	
	
	</table>
</div>