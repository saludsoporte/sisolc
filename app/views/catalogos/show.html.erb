				<th>Fuente</th>
				<th>Precio</th>
				<th>Obs.</th>
				<th>Mov.</th>
			</tr>
		<% @lotes.each do |lote| %>
			<% catalogo = Catalogo.find(lote.catalogo_id) %>
			<tr>
				<td align="center"><%=raw lote.id %></td>
				<td align="center"><%=raw lote.lote_id %></td>
				<td align="center"><%=raw catalogo[:partida] %></td>
				<td align="center"><%=raw catalogo.clave %></td>
