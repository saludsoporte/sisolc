        <th></th>
        <th></th>
	</tr>

	<% @catalogos.each do |catalogo| %>
	<tr>
		<td><%=raw catalogo.partida_id %></td>
		<%begin%>
		<td><%=raw catalogo.partida.partida %></td>
		<%rescue%>
		<%end%>
		<td><%=raw catalogo.clave %></td>
		<td><%=raw catalogo.descripcion %></td>
		<td><%=raw catalogo.presentacion %></td>
		<td><%=raw catalogo.precio %></td>
		<td><%=raw catalogo.proceso %></td>
		<td><%=raw catalogo.fecha %></td>
		<td><%=raw catalogo.precio2 %></td>
		<td><%=raw catalogo.fecha2 %></td>
